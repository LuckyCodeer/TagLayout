<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TagLayout">
        <attr name="choiceMode" format="enum">
            <!--不能选中-->
            <enum name="none" value="0" />
            <!-- 单选 -->
            <enum name="singleChoice" value="1" />
            <!-- 多选 -->
            <enum name="multipleChoice" value="2" />
        </attr>

        <!--单选时默认选择项-->
        <attr name="defaultChoicePosition" format="integer"/>
        <!--单选支持取消-->
        <attr name="singleChoiceSupportCancel" format="boolean"/>
        <!--对齐方式-->
        <attr name="gravity" format="enum">
            <!--居左对齐默认-->
            <enum name="left" value="0" />
            <!-- 居中对齐 -->
            <enum name="center" value="1" />
            <!-- 居右对齐 -->
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>